<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <TextView
        android:id="@+id/jdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingTop="70dp"
        android:text="Scan Qr Code Of Salle"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/activity_main_qrCodeFoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jdf"
            android:text="Scan"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />



    <TextView
        android:id="@+id/scantext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_qrCodeFoundButton"
        app:layout_constraintVertical_bias="0.132" />


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scantext"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/datetext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"


            app:layout_constraintVertical_bias="0.132" />
        <Button
            android:id="@+id/choosedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:background="@layout/blue_otline"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relative1"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title_1"
            android:layout_alignParentRight="true"


            />

        <Button
            android:id="@+id/addcrenau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crenau"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#14213d"

            android:background="@layout/item_drop"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relative2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sallename"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            app:layout_constraintVertical_bias="0.132" />

        <Button
            android:id="@+id/buttonsallename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salle Name"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@layout/item_drop"
            android:textColor="#14213d"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/relative3"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addoccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Occupation"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@layout/blue_otline"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>